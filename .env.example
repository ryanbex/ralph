# ===========================================
# Ralph Web Platform - Environment Variables
# ===========================================

# Vercel Postgres
POSTGRES_URL=
POSTGRES_PRISMA_URL=
POSTGRES_URL_NO_SSL=
POSTGRES_URL_NON_POOLING=
POSTGRES_USER=
POSTGRES_HOST=
POSTGRES_PASSWORD=
POSTGRES_DATABASE=

# Vercel Blob Storage
BLOB_READ_WRITE_TOKEN=

# NextAuth.js
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=  # Generate with: openssl rand -base64 32
AUTH_TRUST_HOST=true  # Required for NextAuth v5

# GitHub OAuth
# Create OAuth app at: https://github.com/settings/developers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# API Key Encryption
API_KEY_ENCRYPTION_SECRET=  # Generate with: openssl rand -base64 32

# AWS (for worker infrastructure)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# AWS ECS (worker deployment)
AWS_ECS_CLUSTER_ARN=
AWS_ECS_TASK_DEFINITION_ARN=
AWS_ECS_SUBNET_IDS=
AWS_ECS_SECURITY_GROUP_IDS=

# AWS S3 (worktree storage)
AWS_S3_BUCKET=
